@model Pink_Panthers_Project.Models.StudentSubmission

@{
	ViewData["Title"] = "Course";
}

<div class="container">
	<div class="row mt-5">
		<form enctype="multipart/form-data" asp-action="SubmitAssignment" method="post">
		<h2>Assignment: @Model.currentAssignment!.AssignmentName</h2>
		<h5>@Model.currentAssignment!.Description</h5>
		@Html.HiddenFor(m => m.AssignmentID)
		@if(Model!.currentAssignment!.SubmissionType == "text")
		{
			<textarea asp-for="Submission" style="width:100%; height:80%;" id="textBox"></textarea>
				<br />
			}
			else
			{
				if (ViewData.ModelState.ContainsKey("NoFile"))
				{
					<em>Upload a file first!</em>
					<br />
				}
				<input type="file" name="file">
		}
		<br />
		<input type="submit" value="Submit" id="textSubmit"/>
		</form>
	</div>
</div>
